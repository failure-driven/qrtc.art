<div class="container">
  <div class="row show-qrtc">
    <div class="column column-50 hash-tags">
      <%= @location.name.inspect %>
      <div class="hash-tags-main">#<%= @location.code %></div>
      <input id="input" type="text" value="<%= @location.hash_tag_text %>"/>
      <button class="button button-outline" id="copy">Copy #hash tag</button>
      <div class="count">Count: <%= @count %></div>
    </div>
    <div class="column column-50 hash-tags">
      <div class="qr">
          <%= @qr_svg %>
      </div>
    </div>
  </div>
</div>

<script>
  function copy() {
    var copyText = document.querySelector("#input");
    copyText.select();
    document.execCommand("copy");
  }

  document.querySelector("#copy").addEventListener("click", copy);
</script>

<style>
#input {
  position: absolute;
  left: -9999px;
  width: 10px;
  padding: 0;
  margin: 0;
}
</style>