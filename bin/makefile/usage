#!/usr/bin/env bash

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m'

_usage() {
  echo
  echo -e "Hi $(whoami)!"
  echo
  echo -e "${GREEN}Tooling${NC}"
  echo
  echo -e "${YELLOW}make prettier${NC}  apply rubocop rules"
  echo -e "${YELLOW}make build${NC}     build app"
  echo
  echo -e "${GREEN}Deploy${NC}"
  echo
  echo -e "${YELLOW}make deploy${NC}    deploy to heroku"
  echo
}
_usage
